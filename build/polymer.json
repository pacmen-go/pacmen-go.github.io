{
  "entrypoint": "index.html",
  "shell": "src\\my-app.html",
  "fragments": [
    "src\\my-view1.html",
    "src\\my-view2.html",
    "src\\my-view404.html"
  ],
  "sources": [
    "images\\**\\*",
    "src\\**\\*",
    "index.html",
    "src\\my-app.html",
    "src\\my-view1.html",
    "src\\my-view2.html",
    "src\\my-view404.html"
  ],
  "extraDependencies": [
    "bower_components\\webcomponentsjs\\*.js",
    "bower_components\\webcomponentsjs\\*.js",
    "!bower_components\\webcomponentsjs\\gulpfile.js",
    "manifest.json"
  ],
  "builds": [
    {
      "name": "es6-unbundled",
      "browserCapabilities": [
        "es2015",
        "push"
      ],
      "js": {
        "minify": false,
        "compile": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": false
      },
      "bundle": false,
      "addServiceWorker": true,
      "addPushManifest": true,
      "preset": "es6-unbundled"
    }
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}